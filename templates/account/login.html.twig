{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				{% if error %}
					<div class="label label-danger">Login ou mot de passe incorrect</div>
				{% endif %}
				<form action="{{ path('account_login') }}" method="POST">
					<div class="form-group">
						<label for="">Login</label>
						<input type="text" name="_username" value="{{lastUser}}" class="form-control">
						<label for="">Mot de passe</label>
						<input type="password" name="_password" class="form-control"><br>
						<input type="hidden" name="_target_path" value="/profile"/>
						<button type="submit" class="btn btn-success">Connexion</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	{% block javascripts %}{% endblock %}
{% endblock %}
